@model EntityLayer.Concreate.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form class="form-group" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız</label>
                            @*<input type="text" class="form-control" id="validationDefault01" name="WriterName" placeholder="" required="">*@
                            @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control"})
                            @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Soyadınız</label>
                            @*<input type="text" class="form-control" id="validationDefault01" name="WriterSurname" placeholder="" required="">*@
                            @Html.TextBoxFor(x => x.WriterSurname, new { @class = "form-control"})
                            @Html.ValidationMessageFor(x => x.WriterSurname, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Mail Adresi</label>
                            @*<input type="email" class="form-control" id="validationDefault02" name="WriterMail" placeholder="" required="">*@
                            @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control"})
                            @Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for=" mb-2">Görsel Dosya Yolu</label>
                            <input type="text" class="form-control"name="WriterImage" >
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Şehir</label>
                            @Html.DropDownListFor(x => x.WriterCity, (List<SelectListItem>)ViewBag.Cities, new { @class = "form-control dropdown" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Hakkında</label>
                            @Html.TextBoxFor(x => x.WriterAbout, new { @class = "form-control"})
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Parola</label>
                            @*<input type="password" class="form-control" id="password1" name="WriterPassword" placeholder="" required="">*@
                            @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control"})
                            @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Parola Tekrar</label>
                            @*<input type="password" class="form-control" id="password1" name="WriterPassword" placeholder="" required="">*@
                            @Html.Password("passwordAgain", "", new { @class = "form-control"})
                            @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                    <p>
                        <a href="#" id="btn1">Tüm şartları okudum, kabul ediyorum.</a>
                    </p>
                </form>

            </div>
        </div>
    </div>
    <script>
        $('#btn1').click(function () {
            Swal.fire(
                'Kayıt Koşulları',
                'Sitemize verdiğiniz mail adresi üzerinden bilgi ve haber e-postaları ' +
                'spam ölçüsüne varnadab gönderilmeye devam edicektir!.' +
                'Eğer e - posta bülteninden çıkmak isterseniz mail ileti dizisinden durdurabilirsiniz ' +
                'şifre ve mail adresleriniz şifrelenmiş formatte herhangi bir kullanıcının ' +
                'göremeyeceği şekilde veritabanında depolanmaktadır',
                'Bilgilendirme Mesajı'
            )
        })
    </script>
    

</section>

