@model IEnumerable<EntityLayer.Concreate.Comment>
<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Count() == 0)
    {
        <div class="media-body">
            <h5 class="mt-0">Bu Bloğa henüz yorum yapılmadı.</h5>
            <p>
                İlk yorumu siz yapın...
            </p>
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>
        }
    }

</div>


